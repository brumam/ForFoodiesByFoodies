<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.forfoodiesbyfoodies" >
    <!-- We add permission for app to access INTERNET -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Forfoodiesbyfoodies"
        android:usesCleartextTraffic="true" >
        <activity
            android:name=".Restaurant.WebActivity"
            android:exported="false" />
        <activity
            android:name=".Restaurant.AddRestaurantActivity"
            android:exported="false" />
        <activity
            android:name=".Restaurant.RestaurantDetails"
            android:exported="false" />
        <activity
            android:name=".Restaurant.RecyclerActivity"
            android:exported="false" />
        <activity
            android:name=".Profile.EditProfile"
            android:exported="false" />
        <activity
            android:name=".Profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity android:name=".ForgotActivity" />
        <activity
            android:name=".LoginActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>